# POAM Tracker - Environment Configuration
# Copy this to .env.local and set appropriate values for your environment

# Session Security
# Generate a strong random password (32+ characters)
# Use: openssl rand -base64 32
SESSION_SECRET=your_super_secure_session_secret_at_least_32_characters_long

# Node Environment
NODE_ENV=production

# Database Configuration
# For production, consider using a more robust database
DATABASE_PATH=.data/app.sqlite

# Security Settings
# Set to true in production to enforce HTTPS cookies
SECURE_COOKIES=true

# HTTPS enforced in production
FORCE_HTTPS=true

# Allowed Origins (for CORS if needed)
ALLOWED_ORIGINS=https://yourdomain.com,https://yourapp.dod.mil

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
AUTH_RATE_LIMIT_REQUESTS_PER_MINUTE=5

# Audit Logging
AUDIT_LOG_RETENTION_DAYS=90
ENABLE_AUDIT_LOGGING=true

# Security Headers
CSP_REPORT_URI=https://yourdomain.com/api/csp-report

# Monitoring and Logging
LOG_LEVEL=info
SECURITY_LOG_WEBHOOK=https://your-security-monitoring-endpoint.com/webhooks

# Admin Configuration
INITIAL_ADMIN_EMAIL=admin@yourdomain.gov
INITIAL_ADMIN_PASSWORD=change_this_secure_password

# Session Configuration
SESSION_TIMEOUT_HOURS=8
INACTIVE_SESSION_TIMEOUT_HOURS=2

# Password Policy
MIN_PASSWORD_LENGTH=12
REQUIRE_SPECIAL_CHARS=true
REQUIRE_NUMBERS=true
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true